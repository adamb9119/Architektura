{% extends "base.html.twig" %}

{% block title %}Survey edit "{{survey.title}}"{% endblock %}

{% block content %}
    <h2 class="page-title">Survey edit "{{survey.title}}"</h2>

    {% form_theme form 'form/bootstrap_4_horizontal_layout.html.twig' %}
    {{ form_start(form, {attr: {novalidate: 'novalidate'} }) }}
        {{ form_row(form.title) }}
        {{ form_row(form.slug) }}
        <div class="form-group row">
            <div class="col-sm-2">
                Link
            </div>
            <div class="col-sm-10">
                <a href="{{ path('app_architektura_survey', {id: survey.getId(), slug: survey.slug}) }}">{{ path('app_architektura_survey', {id: survey.getId(), slug: survey.slug}) }}</a>
            </div>
        </div>
        {{ form_row(form.entry_text)}}
        {{ form_row(form.ending_text)}}
        {{ form_row(form.date_start)}}
        {{ form_row(form.date_end)}}
        {{ form_row(form.status)}}
        {{ form_row(form.notify)}}
        {{ form_row(form.save)}}
    {{ form_end(form) }}
{% endblock %}